<body>
<div class="container">
  <header class="site"><a class="brand" href="../index.html">← Utility Tools</a></header>

  <h1 style="font-size:var(--h2-size);margin:6px 0 10px">Russian Transliterator</h1>
  <p class="small">Type Romanized Russian (e.g., "privet" → "привет") and get Cyrillic output. Supports digraphs like "zh/sh/ch/shch". Copy the result.</p>

  <div class="section">
    <label for="input">Romanized Input</label>
    <textarea id="input" rows="6" placeholder="e.g., privet, kak dela? → привет, как дела?"></textarea>
    <div class="stack" style="margin-top:10px">
      <button id="go">Transliterate</button>
      <button class="secondary" id="copy" style="display:none">Copy Output</button>
      <button class="secondary" id="clear">Clear</button>
    </div>
  </div>

  <div class="section">
    <label>Cyrillic Output</label>
    <div id="output" class="out" style="min-height:100px;white-space:pre-wrap;font-family:monospace"></div>
    <p class="small">Note: This uses standard GOST transliteration. Some words may need tweaks for dialects.</p>
  </div>

  <footer class="site"><a href="../index.html">← Back to tools</a></footer>
</div>

<script>
const MAP = new Map(Object.entries({
  // Vowels
  'a':'а','e':'е','i':'и','o':'о','u':'у','y':'ы',
  // Consonants
  'b':'б','v':'в','g':'г','d':'д','zh':'ж','z':'з','j':'й','k':'к','l':'л','m':'м','n':'н','p':'п','r':'р','s':'с','t':'т','f':'ф','h':'х','ts':'ц','ch':'ч','sh':'ш','shch':'щ',
  // Soft sign
  '':'ь'  // Placeholder for soft sign (e.g., after b/c/d/f/g/h/k/l/m/n/p/r/s/t/v)
}));
const input = document.getElementById('input'), out = document.getElementById('out');
const transliterate = (text) => {
  let result = text.toLowerCase().replace(/([bcdfghklmnp r s t v])\s*ya?/g, '$1я').replace(/([bcdfghklmnp r s t v])\s*yu?/g, '$1ю').replace(/([bcdfghklmnp r s t v])\s*ye?/g, '$1е').replace(/([bcdfghklmnp r s t v])\s*yo?/g, '$1ё'); // Handle ya/yu/ye/yo
  return [...result].map(ch => MAP.get(ch) ?? ch).join(''); // Map single chars
};
const convert = () => out.textContent = transliterate(input.value);
document.getElementById('go').onclick = convert;
document.getElementById('copy').onclick = async () => { await navigator.clipboard.writeText(out.textContent); alert('Copied!'); };
document.getElementById('clear').onclick = () => { input.value=''; out.textContent=''; document.getElementById('copy').style.display = 'none'; };
</script>
